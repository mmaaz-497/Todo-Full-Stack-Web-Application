# ============================================
# Todo AI Chatbot - Environment Configuration
# ============================================

# ============================================
# Cluster Configuration (DigitalOcean)
# ============================================
CLUSTER_NAME=todo-app-cluster
REGION=nyc1
NODE_SIZE=s-2vcpu-4gb
NODE_COUNT=3

# ============================================
# Domain Configuration
# ============================================
DOMAIN=todo.yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# ============================================
# Container Registry
# ============================================
DO_REGISTRY=registry.digitalocean.com/todo-app

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://postgres:your-secure-password@postgres.default.svc.cluster.local:5432/todo_db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ============================================
# Authentication & Security
# ============================================
JWT_SECRET_KEY=your-super-secret-jwt-key-minimum-32-characters-long
BETTER_AUTH_SECRET=your-better-auth-secret-key
BETTER_AUTH_URL=http://better-auth-service.default.svc.cluster.local:3001
AUTH_SECRET=your-auth-secret-here
AUTH_ISSUER=https://todo.yourdomain.com

# ============================================
# OpenAI Configuration
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=500

# ============================================
# Email Configuration (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=Todo App Notifications

# ============================================
# Kafka Configuration
# ============================================
KAFKA_BOOTSTRAP_SERVERS=kafka-cluster-kafka-bootstrap.kafka.svc.cluster.local:9092
KAFKA_TASK_EVENTS_TOPIC=task-events
KAFKA_REMINDERS_TOPIC=reminders
KAFKA_TASK_UPDATES_TOPIC=task-updates
KAFKA_AUDIT_TOPIC=audit-logs

# ============================================
# Service Configuration
# ============================================
API_SERVICE_PORT=8000
RECURRING_TASK_SERVICE_PORT=8001
NOTIFICATION_SERVICE_PORT=8002
AUDIT_SERVICE_PORT=8003
WEBSOCKET_SYNC_SERVICE_PORT=8004

# ============================================
# Logging & Monitoring
# ============================================
LOG_LEVEL=INFO
ENVIRONMENT=production

# ============================================
# External Services (Optional)
# ============================================
DO_DB_ID=
KAFKA_USERNAME=
KAFKA_PASSWORD=
